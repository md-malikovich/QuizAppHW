<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TitleText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/colorBlack</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/sf_pro_thin</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>

    </style>

</resources>