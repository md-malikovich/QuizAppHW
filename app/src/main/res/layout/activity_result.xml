<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.ResultActivity">

    <TextView
        android:id="@+id/tvResult"
        android:text="Result"
        android:textSize="17dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_img_done" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="342dp"
        android:layout_height="174dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="4dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@id/imgResult">

        <TextView
            android:id="@+id/tvResult_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Mixed"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginStart="104dp" />

        <TextView
            android:id="@+id/tvResult_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty:"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:layout_marginTop="81dp"
            android:layout_marginStart="26dp" />

        <TextView
            android:id="@+id/tvAnswerResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct answers:"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:layout_marginTop="81dp"
            android:layout_marginStart="112dp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result:"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:layout_marginTop="81dp"
            android:layout_marginStart="262dp" />

        <TextView
            android:id="@+id/tvResult_difficulty2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginStart="42dp" />

        <TextView
            android:id="@+id/tvAnswerResult2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8/10"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginStart="142dp" />

        <TextView
            android:id="@+id/tv_result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginStart="270dp" />

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Finish"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_btn2" />

</androidx.constraintlayout.widget.ConstraintLayout>