<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".history.HistoryFragment">

    <TextView
        android:id="@+id/tvHistory"
        style="@style/TitleText"
        android:text="History"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView1"
        android:layout_width="338dp"
        android:layout_height="90dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="4dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistory">

        <TextView
            android:id="@+id/tvHistory_category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Mixed"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/imgTheDots1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_dots"/>

        <TextView
            android:id="@+id/tvHistory_answers1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct answers:"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:layout_marginTop="39dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tvHistoryAnswers1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8/10"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:layout_marginTop="39dp"
            android:layout_marginStart="112dp" />

        <TextView
            android:id="@+id/tvHistory_difficulty1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty: "
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tvResultDifficulty1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textSize="12sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="76dp" />

        <TextView
            android:id="@+id/tvResultDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 january 2020 21:21"
            android:textSize="9sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="230dp" />

    </com.google.android.material.card.MaterialCardView>

