<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvQuizQuestion"
        android:layout_width="213dp"
        android:layout_height="70dp"
        android:text="What is the largest city and commercial capital of Sri Lanka?"
        android:textSize="20dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quiz_linear_btnMultiple"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvQuizQuestion"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAnswer1"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="52dp"
            android:textColor="@color/colorWhite"
            android:text="Colombo"
            android:visibility="visible"
            android:background="@drawable/rounded_btn_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuizQuestion"/>

        <Button
            android:id="@+id/btnAnswer2"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorBlue"
            android:text="Moratuwa"
            android:visibility="visible"
            android:background="@drawable/rounded_btn_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAnswer1"/>

        <Button
            android:id="@+id/btnAnswer3"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorBlue"
            android:text="Negombo"
            android:visibility="visible"
            android:background="@drawable/rounded_btn_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAnswer2"/>

        <Button
            android:id="@+id/btnAnswer4"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorBlue"
            android:text="Kandy"
            android:visibility="visible"
            android:background="@drawable/rounded_btn_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAnswer3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/quiz_linear_btnSimple"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tvQuizQuestion"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnAnswer11"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Negombo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuizQuestion" />

        <Button
            android:id="@+id/btnAnswer22"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="Kandy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAnswer11" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

